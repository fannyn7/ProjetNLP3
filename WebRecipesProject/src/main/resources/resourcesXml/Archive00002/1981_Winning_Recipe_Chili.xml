<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>1981 Winning Recipe Chili</title>
      <categories>
        <cat>Main dish</cat>
        <cat>Ethnic</cat>
        <cat>Mexican</cat>
        <cat>Chili</cat></categories>
      <yield>4</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>2 1/2</qty>
          <unit>pounds</unit></amt>
        <item>Beef brisket, 1" cubes</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>pound</unit></amt>
        <item>Lean pork, ground</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Large onion, chopped fine</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Wesson oil</item></ing>
      <ing>
        <amt>
          <qty>3</qty>
          <unit>x</unit></amt>
        <item>Garlic cloves, minced</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Diced green chilies</item></ing>
      <ing>
        <amt>
          <qty>8</qty>
          <unit>ounces</unit></amt>
        <item>Tomato sauce</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Salt and pepper to taste</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Beef bouillon cube</item></ing>
      <ing>
        <amt>
          <qty>12</qty>
          <unit>ounces</unit></amt>
        <item>Budweiser beer</item></ing>
      <ing>
        <amt>
          <qty>1 1/4</qty>
          <unit>cups</unit></amt>
        <item>Water</item></ing>
      <ing>
        <amt>
          <qty>6</qty>
          <unit>tablespoons</unit></amt>
        <item>Chili powder</item></ing>
      <ing>
        <amt>
          <qty>2 1/2</qty>
          <unit>tablespoons</unit></amt>
        <item>Ground cumin</item></ing>
      <ing>
        <amt>
          <qty>1/8</qty>
          <unit>teaspoons</unit></amt>
        <item>Dry mustard</item></ing>
      <ing>
        <amt>
          <qty>1/8</qty>
          <unit>teaspoons</unit></amt>
        <item>Brown sugar</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Oregano, pinch</item></ing></ingredients>
    <directions>
      <step>  In a large kettle or Dutch oven, brown the Beef, Pork and Onions in hot
  Wesson Oil.  Add Salt and Pepper to taste. Add remaining ingredients. Stir
  well.   Cover and simmer 3 to 4 hours, until meat is tender and Chili is
  thick and bubbly.  Stir occasionally.
  
  From Gemini's MASSIVE MealMaster collection at www.synapse.com/~gemini
 
</step></directions></recipe></recipeml>
