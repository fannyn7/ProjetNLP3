<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>1991 Ics World Championship Bowl of Red - C</title>
      <categories>
        <cat>Chili</cat>
        <cat>Beef</cat>
        <cat>Pork</cat></categories>
      <yield>1</yield></head>
    <ingredients>
      <ing-div>
        <title>CHUCK OZBURN HBWK07A</title></ing-div>
      <ing-div>
        <title>PART 1</title>
        <ing>
          <amt>
            <qty>3</qty>
            <unit>pounds</unit></amt>
          <item>Beef; cubed or coarse grou</item></ing>
        <ing>
          <amt>
            <qty>8</qty>
            <unit>ounces</unit></amt>
          <item>Ground pork</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>tablespoon</unit></amt>
          <item>Flour</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>tablespoon</unit></amt>
          <item>Wesson oil</item></ing>
        <ing>
          <amt>
            <qty>1/3</qty>
            <unit>cups</unit></amt>
          <item>Minced onion</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>tablespoons</unit></amt>
          <item>Granulated garlic</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>can</unit></amt>
          <item>Beef stock</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>cans</unit></amt>
          <item>Chicken stock</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>can</unit></amt>
          <item>(8 oz) hunt's tomato sauce</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>tablespoons</unit></amt>
          <item>Cumin</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>can</unit></amt>
          <item>(4 oz) mild green chilies</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit/></amt>
          <item>Jalapeo pepper; seeded &amp; minced</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Black pepper</item></ing>
        <ing>
          <amt>
            <qty>3</qty>
            <unit>tablespoons</unit></amt>
          <item>Gebhardt chili powder</item></ing></ing-div>
      <ing-div>
        <title>PART 2</title>
        <ing>
          <amt>
            <qty>4</qty>
            <unit>ounces</unit></amt>
          <item>Hunt's tomato sauce</item></ing>
        <ing>
          <amt>
            <qty>4</qty>
            <unit>tablespoons</unit></amt>
          <item>Gebhardt chili powder</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>tablespoons</unit></amt>
          <item>Mild new mexico chili powder</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>tablespoons</unit></amt>
          <item>Cumin</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Granulated garlic</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Tabasco pepper sauce</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Brown sugar</item></ing></ing-div></ingredients>
    <directions>
      <step>      Recipe by: HBWK07A Chuck Ozburn
      Saute meat in oil, drain and add to a 4-quart cooking pot; add all
  other ingredients in Part 1 and simmer, covered, for 1 hour and 30 minutes;
  uncover, add all ingredients in Part 2 and simmer for 45 minutes.
      Randy Robinson Columbus, Ohio (representing the state of Kentucky)
  
  From Gemini's MASSIVE MealMaster collection at www.synapse.com/~gemini
 
</step></directions></recipe></recipeml>
