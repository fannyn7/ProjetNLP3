<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>(Not Just Another) Pasta Salad</title>
      <categories>
        <cat>Salad</cat></categories>
      <yield>12</yield></head>
    <ingredients>
      <ing-div>
        <title/>
        <ing>
          <amt>
            <qty>4</qty>
            <unit>quarts</unit></amt>
          <item>Spiral or shell pasta; cooked</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>pound</unit></amt>
          <item>Roma; or medium tomatoes, seeded; 1/2" dice</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>cups</unit></amt>
          <item>Red onion; small dice</item></ing>
        <ing>
          <amt>
            <qty>1 1/2</qty>
            <unit>cups</unit></amt>
          <item>Pitted olives; Kalamata or canned; halved</item></ing>
        <ing>
          <amt>
            <qty>1/4</qty>
            <unit>cups</unit></amt>
          <item>Un dried tomates; reconstituted; chopped</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>cup</unit></amt>
          <item>Cauliflower; small pieces</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>cups</unit></amt>
          <item>Broccoli; small pieces</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>cups</unit></amt>
          <item>Roasted red peppers; 1/2" dice</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>cups</unit></amt>
          <item>Capers</item></ing>
        <ing>
          <amt>
            <qty>1 1/2</qty>
            <unit>cups</unit></amt>
          <item>Feta cheese; crumbled</item></ing>
        <ing>
          <amt>
            <qty>1/4</qty>
            <unit>cups</unit></amt>
          <item>Fresh grated parmesan cheese</item></ing></ing-div>
      <ing-div>
        <title>MAGIC SALAD DRESSING</title>
        <ing>
          <amt>
            <qty>4</qty>
            <unit/></amt>
          <item>Cloves garlic; minced</item></ing>
        <ing>
          <amt>
            <qty>3/4</qty>
            <unit>cups</unit></amt>
          <item>Extra virgin olive oil</item></ing>
        <ing>
          <amt>
            <qty>1/4</qty>
            <unit>cups</unit></amt>
          <item>Red wine vinegar</item></ing>
        <ing>
          <amt>
            <qty>1 1/2</qty>
            <unit>tablespoons</unit></amt>
          <item>Capers</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>tablespoon</unit></amt>
          <item>Liquid from capers</item></ing>
        <ing>
          <amt>
            <qty>1/4</qty>
            <unit>cups</unit></amt>
          <item>Lemon juice</item></ing>
        <ing>
          <amt>
            <qty>1/4</qty>
            <unit>teaspoons</unit></amt>
          <item>Fresh ground pepper</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Salt</item></ing></ing-div></ingredients>
    <directions>
      <step>  submitted by: cathlin@oneworld.com (Cathlin Bennett, Corvallis, Oregon)
  Combine all salad ingredients except parmesan cheese. In a blender mix all
  dressing ingredients. Pour dressing over salad and toss carefully, adding
  parmesan.
  
