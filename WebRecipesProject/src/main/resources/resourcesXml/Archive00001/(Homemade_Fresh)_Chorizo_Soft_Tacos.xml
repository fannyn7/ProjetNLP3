<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>(Homemade Fresh) Chorizo Soft Tacos</title>
      <categories>
        <cat>None</cat></categories>
      <yield>1</yield></head>
    <ingredients>
      <ing-div>
        <title>CHORIZO</title>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>large</unit></amt>
          <item>Garlic cloves; crushed</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>pound</unit></amt>
          <item>Ground turkey</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Crushed red pepper</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Cayenne; (or substitute paprika for less hot)</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>tablespoon</unit></amt>
          <item>Hot paprika</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>tablespoon</unit></amt>
          <item>Sweet paprika</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Ground cinnamon</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Ground cloves</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Ground cumin</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Salt</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Cracked black pepper</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Greek oregano</item></ing>
        <ing>
          <amt>
            <qty>3</qty>
            <unit>tablespoons</unit></amt>
          <item>Olive oil; (up to 4)</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>tablespoon</unit></amt>
          <item>Water</item></ing>
        <ing>
          <amt>
            <qty>1 1/2</qty>
            <unit>tablespoons</unit></amt>
          <item>Cider vinegar</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>tablespoons</unit></amt>
          <item>Olive oil; (for pan-frying)</item></ing></ing-div>
      <ing-div>
        <title>ACCOMPANIMENTS</title>
        <ing>
          <amt>
            <qty/>
            <unit/></amt>
          <item>Soft flour tortillas; (can heat in microwave)</item></ing>
        <ing>
          <amt>
            <qty/>
            <unit/></amt>
          <item>Chopped lettuce</item></ing>
        <ing>
          <amt>
            <qty/>
            <unit/></amt>
          <item>Chopped tomato</item></ing>
        <ing>
          <amt>
            <qty/>
            <unit/></amt>
          <item>Shredded cheddar cheese</item></ing>
        <ing>
          <amt>
            <qty/>
            <unit/></amt>
          <item>Sliced black olives</item></ing>
        <ing>
          <amt>
            <qty/>
            <unit/></amt>
          <item>Chopped scallions</item></ing>
        <ing>
          <amt>
            <qty/>
            <unit/></amt>
          <item>Sour cream</item></ing>
        <ing>
          <amt>
            <qty/>
            <unit/></amt>
          <item>Salsa or taco sauce</item></ing></ing-div></ingredients>
    <directions>
      <step>  http://dinnercoop.cs.cmu.edu/dinnercoop/Recipes/subjects/turkey.html
  
  Mix together all ingredients for chorizo. Then pan-fry in the 2 T olive
  oil.
  
  Put on the table with accompaniments and warmed flour tortillas and let
  everyone assemble their own.
  
  Posted to recipelu-digest by LSHW &lt;shusky@erols.com&gt; on Feb 18, 1998
 
</step></directions></recipe></recipeml>
