            <qty>1 1/2</qty>
            <unit>ounces</unit></amt>
          <item>Red food coloring</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Vanilla</item></ing>
        <ing>
          <amt>
            <qty>1 1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Cocoa; (Nestles instant)</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Salt</item></ing>
        <ing>
          <amt>
            <qty>2 1/2</qty>
            <unit>cups</unit></amt>
          <item>Cake flour</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
